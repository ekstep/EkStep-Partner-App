<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="@dimen/padding_layout"
    android:background="@color/white"
    tools:context=".MainActivity">
    <org.partner.customviews.MyProgressBar
        android:visibility="gone"
        android:id="@+id/sendingDetails"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ScrollView
        android:visibility="visible"
        android:id="@+id/scrollViewChildContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="@dimen/margin_bottom_scroll"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="5dp"

            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/linearLayoutprofile"
                android:layout_marginTop="5dp"
                >
                <!--profile -->
                <org.partner.customviews.CustomTextView
                    style="@style/text_style"
                    android:text="@string/profile"
                    custom:fontAssetName="Roboto-Regular.ttf"
                    />


                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    style="@style/spinner_style"
                    android:popupBackground="@color/white"
                    android:focusableInTouchMode="true"
                    android:id="@+id/spinnerProfile"
                    />



            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/padding_layout"
                 android:id="@+id/displayLayout"
                >


            </LinearLayout>
        </LinearLayout>



    </ScrollView>



    <org.partner.customviews.CustomButton
        android:id="@+id/Register_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/login_button_height"
        android:layout_alignParentBottom="true"
        android:layout_margin="@dimen/margin_btn"
        android:background="@drawable/roundbutton"
        android:visibility="visible"
        android:gravity="center"
        android:text="Register"
        android:textColor="@color/color_text_lablel"
        android:textSize="@dimen/size_16"
        custom:fontAssetName="Roboto-Medium.ttf" />



</RelativeLayout>
